@using Zadaca_4._1._vj.Models
@model List<Artikl>
@{
    ViewBag.Title = "DodajArtikl";
}

<h2>DodajArtikl</h2>
<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        padding: 1px;
        padding: 15px;
        font-weight: bold;
    }

    #tbl th {
        background-color: firebrick;
        color: gold;
    }

    #tbl tr:nth-child(even) {
        background-color: #b4eeb6;
    }

    #tbl tr:nth-child(odd) {
        background-color: #82b483;
    }

    #tbl td:nth-child(n+2) {
        text-align: center;
    }

    #tbl td:last-child {
        text-align: right;
    }

    p {
        font-size: 20px;
        margin-top: 32px;
    }
</style>

<div>
    <table id="tbl">
        <tr>
            <th>Kategorija</th>
            <th>Naziv</th>
            <th>Cijena</th>
            <th>Količina</th>
        </tr>
        @foreach (Artikl item in (List<Artikl>)Model)
        {
            <tr>
                <td>@item.Kategorija</td>
                <td>@item.Naziv</td>
                <td>@string.Format("{0:N2}", item.Cijena)</td>
                <td>@item.Kolicina</td>
            </tr>
        }
    </table>
</div>
<p>
    <a href="/ListaArtikala/UnesiArtikl">Unos novog artikla</a>
</p>