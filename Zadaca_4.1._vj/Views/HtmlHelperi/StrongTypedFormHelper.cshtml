@model Zadaca_4._1._vj.Models.Osoba
@{
    ViewBag.Title = "StrongTypedFormHelper";
}

<h2>FormHelper</h2>
@foreach (var item in ViewBag.Mjesta)
{
    @item
}

@using (Html.BeginForm("StrongTypedFormHelper", "HtmlHelperi", FormMethod.Post))
{
    <div>
        <label for="Ime">Ime:</label>
        @Html.TextBoxFor(x => x.Ime)
    </div>
    <div>
        <label for="Prezime">Prezime:</label>
        @Html.TextBoxFor(x => x.Prezime)
    </div>
    <div>
        <label for="BrojCipala">BrojCipala:</label>
        @Html.TextBoxFor(x => x.BrojCipala, new { @type="number"})
    </div>
    <div>
        <label for="Email">Email:</label>
        @Html.TextBoxFor(x => x.Email)
    </div>
    <div>
        <label for="MjestoStanovanja">Mjesto stanovanja:</label>
        @Html.DropDownListFor(x => x.MjestoStanovanja, new SelectList((string[])ViewBag.Mjesta), "--Odaberi--")
    </div>
    <div>
        <label for="Spol">Spol:</label>
        @Html.RadioButtonFor(x => x.Spol, "M", true); Muško <br />
        @Html.RadioButtonFor(x => x.Spol, "Z", false); Žensko <br />
    </div>
    <div>
        <label for="Zaposlen">Zaposlen:</label>
        @Html.CheckBoxFor(x => x.Zaposlen, true); <br />
    </div>
    <input type="submit" name="name" value="Pošalji" />
}

<p>
    <label style="color: red;">@ViewBag.Poruka</label>
</p>
